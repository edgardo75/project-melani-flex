<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:components="com.hillelcoren.components.*"
		 width="476" height="300" creationComplete="group1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			[Bindable]
			private var xmlProvincias:XMLList;
			[Bindable]
			private var xmlLocalidades:XMLList;
			
			protected function operation1_resultHandler(event:ResultEvent):void
			{
				xmlProvincias=new XMLList(event.result);	
				
				cmbprovincias.dataProvider=provinciaslist;
				cmbprovincias.selectedItemId=18;
				
			}
			
			protected function operation1_faultHandler(event:FaultEvent):void
			{
				// TODO Auto-generated method stub
				
				Alert.show(event.fault.toString());
			}
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				
				serviceProvincias.searchAllProvincias();
				wslocaliades.searchAllLocalidadesbyidprov(18);
				cmborientacion.dataProvider=orientlist;
				cmborientacion.selectedItemId=1;
				
			}
			
			protected function operation2_resultHandler(event:ResultEvent):void
			{
				// TODO Auto-generated method stub
				
				xmlLocalidades=new XMLList(event.result);
				
				cmbLocalidades.dataProvider=localidadeslist;
				cmbLocalidades.selectedItemId=15758;
				
			}
			
			protected function operation2_faultHandler(event:FaultEvent):void
			{
				// TODO Auto-generated method stub
				
			}
			
		]]>
	</fx:Script>
	
	<components:AdvancedAutoComplete id="cmbprovincias" x="10" y="21" width="97" allowDuplicates="false"
									 allowNewValues="false" labelField="descripcion"
									 matchType="beginning">
	</components:AdvancedAutoComplete>
	<s:Label x="10" y="10" text="Provincias"/>
	<components:AdvancedAutoComplete id="cmbLocalidades" x="124" y="21" labelField="descripcion" matchType="beginning">
	</components:AdvancedAutoComplete>
	<s:Label x="124" y="8" text="Localidades"/>
	<components:AdvancedAutoComplete id="cmborientacion" x="292" y="21" width="84" labelField="DESCRIPCION" matchType="word">
	</components:AdvancedAutoComplete>
	<s:Label x="292" y="8" text="Orientacion"/>
	
	
	
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Declarations>
		<fx:XML xmlns="" id="orientaciones">
			
			<Orientaciones>
				<Orientacion>
					<id>1</id>
					<DESCRIPCION>NORTE</DESCRIPCION>							
				</Orientacion>
				<Orientacion>
					<id>2</id>
					<DESCRIPCION>SUR</DESCRIPCION>
				</Orientacion>
				<Orientacion>
					<id>3</id>
					<DESCRIPCION>ESTE</DESCRIPCION>
				</Orientacion>
				<Orientacion>
					<id>4</id>
					<DESCRIPCION>OESTE</DESCRIPCION>
				</Orientacion>
			</Orientaciones>
			
			
			
			
		</fx:XML>
		<s:XMLListCollection id="orientlist" source="{orientaciones.Orientacion}"/>
		<s:XMLListCollection id="provinciaslist" source="{xmlProvincias.provincia}"/>
		<s:XMLListCollection id="localidadeslist" source="{xmlLocalidades.localidades}"/>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<s:WebService id="serviceProvincias" wsdl="http://localhost:8080/ServiceProvincias/ProvinciasWs?WSDL" showBusyCursor="true">
			<s:operation name="searchAllProvincias" result="operation1_resultHandler(event)" fault="operation1_faultHandler(event)">
				
			</s:operation>
		
		</s:WebService>
		<s:WebService id="wslocaliades" wsdl="http://localhost:8080/ServicesLocalidades/LocalidadesWs?WSDL" showBusyCursor="true">
			<s:operation name="searchAllLocalidadesbyidprov" result="operation2_resultHandler(event)" fault="operation2_faultHandler(event)">
				
			</s:operation>
		</s:WebService>
	</fx:Declarations>
</s:Group>
