		<controls:MaskedTextInput id="mskidpresupuesto" x="10" y="24" width="68" toolTip="Ingrese Número de Presupuesto"/>
		<s:Label x="10" y="10" text="Buscar"/>
	</s:BorderContainer>
	<mx:AdvancedDataGrid id="adgdetallespresupuesto" x="9" y="229" width="463" height="133"
						 designViewDataType="flat">
		<mx:columns>
			<mx:AdvancedDataGridColumn dataField="codigo_producto" headerText="Codigo"/>
			<mx:AdvancedDataGridColumn dataField="descripcion_prod" headerText="Descripcion"/>
			<mx:AdvancedDataGridColumn dataField="subtotal" headerText="Subtotal"/>
		</mx:columns>
	</mx:AdvancedDataGrid>
	<s:Button id="btnImprimir" x="498" y="249" label="Imprimir"/>
	<s:Button id="btnExportar" x="498" y="294" label="Copiar Grilla (TAB)" toolTip="Copiar y Pegar listado al portapapeles y visualizar en Excel"
			  click="DataGridUtil.exportADGToClipboard(adgPresupuestos, false, false)"/>
