					// directly from the cellrenderer that's showing the value
					// in the datagrid -- it's the same value.
					// That way you wouldn't need a reference to the DataGrid.
					//var oldValue = event.itemRenderer.data[field];
					// get the value (post-edit) from the item editor
					var newValue:Number = Number(grid.itemEditorInstance[grid.columns[col].editorDataField]);
					
					// check if the value has changed
					if (newValue != oldValue)
					{
						
						
						// do actions that should happen when the data changes
						// Note that in this case, the dataprovider
						// hasn't been updated yet, so you can't do any
						// actions that require the dataprovider to have 
						// the new data
						//Alert.show(newValue+" "+oldValue+" "+col+" "+grid.selectedItem.subtotal);
						if(col==4){
							var priceValue:Number=(grid.selectedItem.price);
							var subtot1:Number=(grid.selectedItem.subtotal);
							
							if(newValue>0){
								
								if(grid.selectedItem.prec_descuento>0)
									
									grid.selectedItem.subtotal=grid.selectedItem.countt*Number(Number(grid.selectedItem.prec_descuento).toFixed(2));								
								else
									grid.selectedItem.subtotal=newValue*grid.selectedItem.countt;
								
							
								
								if(arrayDg.length==1){
									totGral=Number(newValue*grid.selectedItem.countt);
									if(Number(lbldescuento.text)!=0)
										lblTotApagar.text=Number(totGral-totGralDesc).toFixed(2);
								}else{
									temptot=temptot+(newValue*grid.selectedItem.countt);
									
									for(var i:int=0;i<arrayDg.length;i++){
										if(String(arrayDg[i].name).toLowerCase()!=String(grid.selectedItem.name).toLowerCase()){
											temptot=temptot+(arrayDg[i].price*arrayDg[i].countt);											
										}
									
									}
									
									
									totGral=temptot;
									Alert.show(totGral.toFixed(2)+" "+lblTotApagar.text);
										if(Number(lbldescuento.text)!=0)
											lblTotApagar.text=Number(totGral+Number(lbldescuento.text)).toFixed(2);
								}
								
							
							arrayDg.refresh();
							}
						
							
						
						}else{
							if(col==3){
								var cannt:Number=(grid.selectedItem.countt);
								var subtot:Number=(grid.selectedItem.subtotal);
								
								
								
								if(newValue>0){
									
									if(grid.selectedItem.prec_descuento>0){
									
										
										grid.selectedItem.subtotal=newValue*Number(Number(grid.selectedItem.prec_descuento).toFixed(2));
										
										
										
										
										
									}else{
										grid.selectedItem.subtotal=newValue*grid.selectedItem.price;
									}
									
									
									
								
										if(arrayDg.length==1){
											totGral=Number(grid.selectedItem.price*newValue);
											if(Number(lbldescuento.text)!=0){
												//lbldescuento.text=String(-Number(totGral-grid.selectedItem.subtotal).toFixed(2));
												lblTotApagar.text=Number(String(totGral-totGralDesc)).toFixed(2);
											}
										}else{
											
											
											
											//Alert.show(totGral+" "+grid.selectedItem.price+" "+newValue);
											
											//totGral=totGral+Number(Number(grid.selectedItem.price*newValue).toFixed(2))/2;
											
											temptot=temptot+(grid.selectedItem.price*newValue);
											
											for(var ii:int=0;ii<arrayDg.length;i++){
												if(String(arrayDg[ii].name).toLowerCase()!=String(grid.selectedItem.name).toLowerCase()){
													temptot=temptot+(arrayDg[i].price*arrayDg[i].countt);
												
												}
											
											}
											
										
											totGral=temptot;
											
										
											
												if(Number(lbldescuento.text)!=0){
												
													lblTotApagar.text=Number(String(totGral + Number(lbldescuento.text))).toFixed(2);
												}
										}
											
									
									
									
									
									arrayDg.refresh();
								}
								
							}
							
						
						}
						
						
						if(col==5 && porc_d==0 && oldValue==0){
							var subtotal:Number=grid.selectedItem.subtotal;
								
							
							
							precio=Number(Number(grid.selectedItem.price));
							porcentajedescuento=newValue;
							
							precio_descontado_result_porcentaje=Number(Number(grid.selectedItem.subtotal*(porcentajedescuento/100)));
													
							
							totGralDesc=Number(totGralDesc+Number(precio_descontado_result_porcentaje));
							
							grid.selectedItem.prec_descuento=Number(precio-Number(Number(grid.selectedItem.price*(porcentajedescuento/100)))).toFixed(2);
							
							grid.selectedItem.subtotal=grid.selectedItem.subtotal-precio_descontado_result_porcentaje;
							
						
								
							//-------------------------------------------------------------------------------------
								
							
							
								
								
								lbldescuento.text=Number(Number(-totGralDesc)).toFixed(2);
								lblTotGral.text=String(totGral);
								
								lblTotApagar.text=Number(Number(lblTotGral.text)-Number(totGralDesc.toFixed(2))).toFixed(2);
							
								arrayDg.refresh();
								
							
							
								
						
						}
						
							
					}
					lblTotGral.text=String(totGral.toFixed(2));
				}
				
			}
