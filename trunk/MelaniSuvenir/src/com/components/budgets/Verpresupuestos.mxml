		<controls:MaskedTextInput id="mskidpresupuesto" x="10" y="40" width="68" restrict="0-9" toolTip="Ingrese Número de Presupuesto"/>
		<s:Label x="10" y="26" text="Buscar"/>
	</s:BorderContainer>
