			  click="btnImprimir_clickHandler(event)" enabled="false" fontSize="16"/>
	<s:Button id="btnExportar" x="994" y="242" label="Copiar Grilla (TAB)"
			  click="DataGridUtil.exportADGToClipboard(adgPresupuestos, false, false)"
			  enabled="false" fontSize="16"
			  toolTip="Copiar y Pegar listado al portapapeles y visualizar en Excel"/>
	<s:Button id="btnCloseClientComponent" x="1103" y="10" width="16" height="19" icon="assets/icon_close.png" click="btnClose_clickHandler(event)"/>
	<s:Button id="btnRegargarlistado" x="993" y="173" width="153" label="Regargar Listado"
			  click="btnRegargarlistado_clickHandler(event)" enabled="false" fontSize="16"/>
